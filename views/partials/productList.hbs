<div style="margin:100px 0px;" class="container col-md-12">
    <div class="row col-md-10 offset-md-1">
        <h2 class="col-md-12 text-center">Məhsullar</h2>
        <div class="container col-md-12">
            <div class="col-md-12" style="margin-top:50px" id="itemsContainer">
                {{#each products}}
                <div class="col-md-4" style="padding:20px;float:left;">
                    <div class="card row" style="padding:10px">
                        <div class="col-md-12 float-left">
                            <img class="col-md-12" src="/data/pic/{{this._id}}">
                        </div>
                        <div class="col-md-12 float-left" style="padding:10px">
                            <p class="text-muted">ID: {{this._id}}</p>
                            <p>Ad: {{this.name}}</p>
                            <p>Kod: {{this.code}}</p>
                            <p class="text-muted">Hal hazırda {{#if this.soldOut}}bitib{{else}}mövcuddur{{/if}}</p>
                        </div>
                        <div class="col-md-12 float-left">
                            <button onclick="window.open('/product/{{this._id}}')"
                                class="col-md-12 float-left btn btn-success" style="margin:5px">Bax</button>
                            <button onclick="location.href='/product/delete/{{this._id}}'"
                                class="col-md-12 float-left btn btn-danger" style="margin:5px">Sil</button>
                            <button onclick="location.href='/product/soldout/{{this._id}}'"
                                class="col-md-12 float-left btn btn-secondary" style="margin:5px">
                                {{#if this.soldOut}}Mövcuddur{{else}}Bitib{{/if}}</button>
                            <button onclick="changeProductDetails('{{this._id}}','{{this.name}}')"
                                class="col-md-12 float-left btn btn-primary" style="margin:5px">
                                Düzənlə</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script>
    const changeProductDetails = (id,name) => {
        Swal.fire({
            html: `
            <form enctype="multipart/form-data" autocomplete="off" method="POST" style="padding:20px" action="/update/product/${id}">
            <div class="padding-zero col-md-12 form-field">
                <label for="name">Adı:</label><br>
                <input value="${name}" required class="form-control" placeholder="Adı..." type="text"
                    id="name" name="name">
            </div>
            <div class="padding-zero col-md-12 form-field">
                <label style="cursor: pointer;margin-bottom:0" class="btn btn-primary" for="image">Şəkil Yüklə</label><br>
                <input style="visibility:hidden" accept="image/jpg,image/jpeg,image/png"
                    style="border: none!important;outline:none" class="btn" type="file" id="image" name="image">
            </div>
            <div class="col-md-12 form-field">
                <button type="submit" class="btn btn-primary">Düzənlə</button>
            </div>
            </form>
            `,
            showConfirmButton: false,
            showCancelButton: false,
            showCloseButton: true,
        })
    }
</script>